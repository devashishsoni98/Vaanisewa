# VaaniSewa Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration (if you plan to integrate with external services)
API_BASE_URL=https://your-api-endpoint.com
API_KEY=your-api-key-here

# Database Configuration (if you plan to use a backend database)
DATABASE_URL=your-database-connection-string
DATABASE_NAME=vaanisewa

# Authentication Configuration (if you plan to use external auth services)
AUTH_SECRET=your-auth-secret-key
JWT_SECRET=your-jwt-secret-key

# External Service Integration
# Google Cloud Speech API (for enhanced voice recognition)
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Azure Cognitive Services (alternative voice service)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# AWS Polly (for text-to-speech enhancement)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=your-aws-region

# Email Service Configuration (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Analytics and Monitoring
ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_CLOUD_SPEECH=false
ENABLE_ANALYTICS=false
ENABLE_EMAIL_NOTIFICATIONS=false

# Development Settings
NODE_ENV=development
PORT=3000
DEBUG=true